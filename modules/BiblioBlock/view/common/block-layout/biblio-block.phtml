                        </tr>
                    </thead>
                    <?php endif;?>
                    <tbody>
                      <?php ksort($bibs);?>
                      <?php foreach($bibs as $bib): ?>
                          <tr>
                              <td><?php echo $bib;?></td>
                              <td class="text--right text--italic"></td>
                          </tr>
                      <?php endforeach;?>
                    </tbody>
                  </table>
